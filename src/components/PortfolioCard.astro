---
import { Picture } from 'astro:assets';

interface Props {
	name: string;
	image: ImageMetadata;
}

const {name, image} = Astro.props;
---

<div class="flex flex-col sm:flex-row items-center gap-12 mb-16">
	<div class="w-64 h-64 shadow">
		<Picture src={image} alt={`screenshot of ${name}`} formats={['jpeg', 'avif', 'webp']} width={256} height={256} class="object-cover h-64" />
	</div>
	<div>
		<h2 class="text-3xl mb-4">{name}</h2>
		<div class="flex flex-col items-start gap-4 leading-6">
			<slot />
		</div>
	</div>
</div>